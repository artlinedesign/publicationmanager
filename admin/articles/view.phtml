function getSinglearticle($id){
    global $wpdb;

    $sql = "SELECT * FROM {$wpdb->prefix}publicationmanager_articles WHERE ID = " . $id;

    $article = $wpdb->get_row( $sql );

    return $article;
}
function editSingleArticle($id, $title, $date, $verlag_id, $article_id, $thumbnail_url, $url){
    global $wpdb;
    $wpdb->update( "{$wpdb->prefix}publicationmanager_articles", array('verlag_id' => $verlag_id, 'article_id' => $article_id, 'thumbnail_url' => $thumbnail_url, 'url' => $url, 'title' => $title, 'date' => $date), array( 'ID' => $id ) );
}
