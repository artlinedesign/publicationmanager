function getSinglebook($id){
  global $wpdb;

  $sql = "SELECT * FROM {$wpdb->prefix}publicationmanager_books WHERE ID = " . $id;

  $book = $wpdb->get_results( $sql, 'ARRAY_A' );

  return $book;
}
function editSinglebook($id, $title, $edition, $verlag_id, $author_id, $thumbnail_url, $url){
  global $wpdb;
  $wpdb->update( "{$wpdb->prefix}publicationmanager_books", array( 'title' => $title, 'edition' => $edition, 'verlag_id' => $verlag_id, 'thumbnail_url' => $thumbnail_url, 'url' => $url), array( 'ID' => $id ) );
}
